{# product \App\Entity\Product #}
<div class="col-md-6 col-lg-3 mb-4">
    <div class="card">
        <div class="text-center">
            <img src="{{ asset('catalog/products/' ~ product.imagePath) }}" class="card-img-top" style="max-height: 250px; width: auto" alt="">
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ product.title }}</h5>
            <p class="card-text">{{ product.shortDescription }}</p>
            <p class="">{{ (product.priceInCents/100) | format_currency('EUR') }}</p>
            {#                        <a href="#" class="btn btn-primary">Go somewhere</a>#}
        </div>
    </div>
</div>